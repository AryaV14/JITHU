#include<stdio.h>
#include<string.h>
void main()
{
    int i,j,k,e,l,lw,lt,flag;
    char str[20],word[20],test[20];
    printf("Enter the string : ");
    scanf("%[^\n]",str);
    l=strlen(str);
    word[0]='\0';
    for(i=0;i<l;i++)
    {
        e=1;
        test[0]='\0';
        test[0]=str[i];
        for(j=i+1;j<l;j++)
        {   
            flag=0;
            if(str[j]=str[i])
                break;
            if(str[j]!=str[i])
            {
                for(k=i+1;k<j;k++)
                {
                    if(str[j]=str[k])
                    {
                        flag=1;
                        break;
                    }
                }
            }
            if(flag=1)
                break;
            if(flag==0)
            {   
                test[e++]=str[j]; 
            }
        }
        test[e]='\0';
        lw=strlen(word);
        lt=strlen(test);
        if(lt>lw)
            strcpy(word,test);
    }
    l=strlen(word);
    printf("The longest substring is %s with length %d\n",word,l);
}
